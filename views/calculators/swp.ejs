<% layout('layouts/boilerplate.ejs') %>
<style>
  .heading{
    color:#fd7e14
  }
  .outputs{
    background-color: #7B2BF9;
  }
</style>
<div class="row mt-3 align-items-center">
    <div class="col-md-7">
      <h4 class=" mb-5 heading ">SWP(Systematic Withdrawal Plan) Calculator</h4>
      <form name="myForm">
        <div class="mb-3">
          <label for="investment" class="form-label fw-semibold">Total Investment</label>
          <input
            type="range"
            class="form-range"
            id="investment"
            min="10000"
            max="5000000"
            name="investment"
          />
        </div>
        <div class="mb-3">
          <label for="month" class="form-label fw-semibold">Withdrawal per month</label>
          <input
            type="range"
            class="form-range"
            id="month"
            name="month"
            min="500"
            max="50000"
          />
        </div>
  
        <div class="mb-3">
          <label for="rate" class="form-label fw-semibold">Expected Return Rate[p.a]</label>
          <input
            type="range"
            class="form-range"
            id="rate"
            name="rate"
            min="1"
            max="30"
            step="0.1"
          />
        </div>
  
        <div class="mb-3">
          <label for="time" class="form-label fw-semibold">Time period</label>
          <input
            type="range"
            class="form-range"
            id="time"
            name="time"
            min="1"
            max="30"
          />
        </div>
      </form>
    </div>
    <div class="row col-md-5 mt-md-4 ms-md-auto pe-0">
      <div class="card my-3 p-0">
          <div class="card-header outputs text-white fw-semibold">Your Inputs</div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item value-p"></li>
            <li class="list-group-item value-m"></li>
            <li class="list-group-item value-r"></li>
            <li class="list-group-item value-t"></li>
            
          </ul>
        </div>
    
        <div class="card my-3 p-0">
          <div class="card-header outputs text-white fw-semibold">Your Outputs</div>
    
          <ul class="list-group list-group-flush">
            <li class="list-group-item value-invest"></li>
            <li class="list-group-item value-withdrawal"></li>
            <li class="list-group-item value-final"></li>
          </ul>
        </div>
  </div>
  </div>
  <script>
    document.title='SWP Calculator'
  </script>
  <script src="/js/swp.js"></script>